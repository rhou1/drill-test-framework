
set -x

timeout=90
while [[ $timeout -gt 0 ]]
do
  kubectl exec -i admincli-0 -n dataplatform -- /bin/bash -c 'maprcli table replica list -path /apps/values -json'
  ret=$(kubectl exec -i admincli-0 -n dataplatform -- /bin/bash -c 'maprcli table replica list -path /apps/values -json | grep "cluster"' | wc -l)
  if [[ $ret -eq 0 ]]
  then
    break
  fi
  ((timeout-=2))
  echo timeout $timeout
  sleep 2
done
